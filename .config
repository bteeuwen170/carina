#
# .config
#

# CPU

#if ARCH_i386 || ARCH_x86_64
  # Enable PAE (always true if ARCH_x86_64)
  CONFIG_X86_PAE=o
#endif


# Buses

#if ARCH_i386 || ARCH_x86_64
  # Enable PCI bus support
  CONFIG_PCI=o
#endif


# Char devices

#if ARCH_i386 || ARCH_x86_64
  # Enable CMOS support
  CONFIG_CMOS=o
#endif

#if ARCH_i386 || ARCH_x86_64
  # Enable PC Speaker support
  CONFIG_PCSPK=o
#endif

# Enable keyboard support
CONFIG_KEYBOARD=y
#if CONFIG_KEYBOARD=y
  #if ARCH_i386 || ARCH_x86_64
    # Enable PS2 keyboard support
    CONFIG_PS2KBD=o
  #endif
#endif

#if ARCH_i386 || ARCH_x86_64
  # Enable serial support
  CONFIG_SERIAL=o
#endif

# Enable PTY support (WIP)
#CONFIG_PTY=o
#if CONFIG_PTY
  # Enable TTY support
  #CONFIG_TTY=o
#endif


# Block devices

#if CONFIG_PCI
  # Enable ATA support (FIXME Memory leak)
  #CONFIG_ATA=o
#endif


# Sound devices

# Enable sound support
CONFIG_SOUND=y
#if CONFIG_SOUND
  #if CONFIG_PCI
    # Enable AC97 support
    CONFIG_AC97=o
    # Enable Soundblaster 16 support
    CONFIG_SB16=o
  #endif
#endif


# Video devices

#if ARCH_i386 || ARCH_x86_64
  # Enable VGA support
  CONFIG_VGA=o
#endif


# File systems

# Enable ramfs support
CONFIG_RAMFS=o
