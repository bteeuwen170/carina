/*
 * config
 */

menu "CPU"
{
	if (ARCH_i386) {
		config CONFIG_X86_PAE
			"Enable Physical Address Extension on boot";
	}

	if (ARCH_x86_64) {
		set_config CONFIG_X86_PAE;
	}
}

menu "File systems"
{
	menuconfig CONFIG_ISO9660
		"ISO9660 support";
	{
		config CONFIG_ROCKRIDGE
			"Rock Ridge support";
	}
}

if (CONFIG_BLOCK) {
	menu "Bus devices"
	{
		if (ARCH_x86) {
			config CONFIG_PCI
				"PCI bus support";
		}
	}
}

menu "Char devices"
{
	menu "Real Time Clock"
	{
		if (ARCH_x86) {
			config CONFIG_CMOS
				"CMOS support";
		}
	}

	menu "System timers"
	{
		if (ARCH_x86) {
			config CONFIG_PIT
				"PIT support";
		}
	}

	menuconfig CONFIG_KEYBOARD
		"Keyboard support"
	{
		if (ARCH_x86) {
			config CONFIG_PS2KBD
				"PS/2 keyboard support";
		}
	}
}

menuconfig CONFIG_BLOCK
	"Block devices"
{
	if (CONFIG_PCI) {
		menuconfig CONFIG_IDE
			"IDE support"
		{
			config CONFIG_ATA
				"ATA support";

			config CONFIG_ATAPI
				"ATAPI support";
		}
	}
}

menuconfig CONFIG_SOUND
	"Sound devices"
{
	if (CONFIG_PCI) {
		config CONFIG_AC97
			"Intel AC97 support";

		config CONFIG_ES1370
			"Ensoniq AudioPCI 1370 support"
	}

	if (ARCH_x86) {
		config CONFIG_SB16
			"Soundblaster 16 support";
	}
}

menu "Video devices"
{
	menuconfig CONFIG_CONSOLE
		"Console support"
	{
		if (ARCH_x86) {
			config CONFIG_CONSOLE_SERIAL
				"Serial console support";

			config CONFIG_CONSOLE_VGA
				"VGA text-mode support";
		}
	}
}
